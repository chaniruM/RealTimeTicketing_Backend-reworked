<?xml version="1.0" encoding="UTF-8"?>
<!--<Configuration status="WARN">-->
<Configuration status="info">
    <Appenders>
        <!-- File Appender (Formatted Logs) -->
        <File name="File" fileName="/Users/chanirumannapperuma/Downloads/RealTimeTicketing_Backend-main/src/main/Logs/ticketing.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
        </File>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="File" />
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>